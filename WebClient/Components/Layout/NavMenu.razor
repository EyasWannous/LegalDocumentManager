<style>
    .nav-menu {
        background-color: #343a40;
        height: 100%;
        width: 250px; /* Adjust width as needed */
    }

    .nav-link {
        color: #adb5bd;
        font-weight: 500;
        transition: color 0.3s;
    }

        .nav-link:hover {
            color: #fff;
        }

    .collapse {
        display: none; /* Hides the menu */
    }

        .collapse.show {
            display: block; /* Ensures the menu shows when toggled */
        }
</style>

@code {
    private bool collapseNavMenu = false; // Ensure the menu is open by default

    private string? NavMenuCssClass => collapseNavMenu ? "show" : "collapse";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
