@page
@using LegalDocumentManager.Views.Account
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="NationalNumber">National Number</label>
        <input type="text" class="form-control" id="NationalNumber" name="NationalNumber" asp-for="Input.NationalNumber" />
        <span asp-validation-for="Input.NationalNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" asp-for="Input.Password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe" asp-for="Input.RememberMe" />
        <label class="form-check-label" for="RememberMe">Remember Me</label>
    </div>

    <input type="hidden" id="PublicKey" name="PublicKey" asp-for="Input.PublicKey" value="@ViewData["PublicKey"]" />

    <button type="submit" class="btn btn-primary">Login</button>
</form>

@section Scripts {
    <script>
        // Optionally, handle key generation or pass the private key to localStorage
    </script>
}
